doctype html
html
  head
    title Add New Blog
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h2 Add a New Blog üìù
      form(action="/api/blogs/admin/add", method="POST")
        .mb-3
          label.form-label(for="title") Title
          input.form-control(type="text", name="title", required)
        .mb-3
          label.form-label(for="content") Content
          textarea.form-control(name="content", rows="5", required)
        button.btn.btn-primary(type="submit") Add Blog
        a.btn.btn-secondary.ms-2(href="/api/blogs/admin/view") Cancel
