doctype html
html
  head
    title Blog Admin View
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1 Blog Admin Panel 🚀

      a.btn.btn-primary.mb-3(href="/api/blogs/admin/add") + Add New Blog

      if blogs.length
        table.table.table-striped
          thead
            tr
              th Title
              th Content
              th Actions
          tbody
            each blog in blogs
              tr
                td= blog.title
                td= blog.content
                td
                  a.btn.btn-sm.btn-warning(href=`/api/blogs/admin/edit/${blog._id}`) ✏️ Edit
                  form(action=`/api/blogs/admin/delete/${blog._id}`, method="POST", style="display:inline")
                    button.btn.btn-sm.btn-danger(type="submit") 🗑️ Delete
      else
        p.text-muted No blogs found. Try adding one!
