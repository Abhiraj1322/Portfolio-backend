doctype html
html
  head
    title Edit Skill
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body.container.py-5
    h1.mb-4 Edit Skill

    form(action=`/api/skills/admin/edit/${skill._id}`, method="POST")
      .mb-3
        label.form-label(for="skills") Skill Name
        input.form-control(type="text", name="skills", id="skills", value=skill.skills, required)

      .mb-3
        label.form-label(for="level") Level
        input.form-control(type="text", name="level", id="level", value=skill.level, required)

      button.btn.btn-success(type="submit") Update Skill
