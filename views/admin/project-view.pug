doctype html
html
  head
    title Admin Projects
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
  body(class="bg-light")
    .container.mt-5
      h1.mb-4 Project List (Admin Panel)
      a.btn.btn-success.mb-3(href="/api/projects/admin/add") + Add New Project

      if projects.length
        table.table.table-bordered.table-hover
          thead.table-dark
            tr
              th Title
              th Technologies
              th Status
              th Actions
          tbody
            each project in projects
              tr
                td= project.title
                td= project.technologies
                td= project.status
                td
                  a.btn.btn-primary.btn-sm(href=`/api/projects/admin/edit/${project._id}`) Edit
                  form.d-inline(method="POST", action=`/api/projects/admin/delete/${project._id}`)
                    button.btn.btn-danger.btn-sm(type="submit" onclick="return confirm('Are you sure?')") Delete
      else
        p.text-muted No projects found.
