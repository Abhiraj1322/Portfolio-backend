doctype html
html
  head
    title Skills Admin
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body(class="container py-5")
    h1.mb-4 Skills Admin Panel
    a.btn.btn-primary(href="/api/skills/admin/add") Add New Skill

    table.table.table-bordered.mt-4
      thead.table-dark
        tr
          th Skill
          th Level
          th Actions
      tbody
        each skill in skills
          tr
            td= skill.skills
            td= skill.level
            td
              a.btn.btn-sm.btn-warning(href=`/api/skills/admin/edit/${skill._id}`) Edit
              form(action=`/api/skills/admin/delete/${skill._id}`, method="POST", class="d-inline")
                button.btn.btn-sm.btn-danger(type="submit") Delete
