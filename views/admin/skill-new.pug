doctype html
html
  head
    title Add skill
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body(class="container py-5")
    h1.mb-4 Add a New Skill

    form(action="/api/skills/admin/add", method="POST")
      div.mb-3
        label.form-label(for="skill") skill
        input.form-control(type="text", name="skills", required)
      div.mb-3
        label.form-label(for="level") Level
        input.form-control(type="text", name="level", required)
      button.btn.btn-success(type="submit") Add Skill
