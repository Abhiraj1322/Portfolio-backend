doctype html
html
  head
    title Edit Blog
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h2 Edit Blog ✏️
      form(action=`/api/blogs/admin/edit/${blog._id}`, method="POST")
        .mb-3
          label.form-label(for="title") Title
          input.form-control(type="text", name="title", value=blog.title, required)
        .mb-3
          label.form-label(for="content") Content
          textarea.form-control(name="content", rows="5", required)= blog.content
        button.btn.btn-success(type="submit") Update Blog
        a.btn.btn-secondary.ms-2(href="/api/blogs/admin/view") Cancel
