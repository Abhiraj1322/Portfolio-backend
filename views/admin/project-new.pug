doctype html
html
  head
    title Add New Project
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body(class="bg-light")
    .container.mt-5
      h1.mb-4 Add New Project

      form(action="/api/projects/admin/add", method="POST")
        .mb-3
          label.form-label(for="title") Title
          input.form-control(type="text", name="title", required)

        .mb-3
          label.form-label(for="description") Description
          textarea.form-control(name="description", rows="4", required)

        .mb-3
          label.form-label(for="technologies") Technologies
          input.form-control(type="text", name="technologies")

        .mb-3
          label.form-label(for="repo_link") Repo Link
          input.form-control(type="url", name="repo_link")

        .mb-3
          label.form-label(for="live_link") Live Link
          input.form-control(type="url", name="live_link")

        .mb-3
          label.form-label(for="status") Status
          select.form-select(name="status")
            option(value="active") Active
            option(value="inactive") Inactive

        button.btn.btn-primary(type="submit") Add Project
        a.btn.btn-secondary.ms-2(href="/api/projects/admin/view") Cancel
